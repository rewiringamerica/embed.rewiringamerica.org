{
  "name": "calculator-widget",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@lit-labs/task": "^2.0.0",
    "@shoelace-style/shoelace": "^2.11.0",
    "autonumeric": "^4.8.1",
    "element-internals-polyfill": "^1.3.4",
    "lit": "^2.6.1",
    "scroll-into-view-if-needed": "^3.1.0"
  },
  "scripts": {
    "build:widget": "NODE_ENV=production parcel build --target default",
    "serve:widget": "NODE_ENV=development parcel serve ./src/*.html --dist-dir build",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "tsc --noEmit && prettier --check . && eslint .",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "2.10.2",
    "@swc/helpers": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "axe-core": "^4.8.2",
    "cypress": "^12.6.0",
    "cypress-axe": "^1.5.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "parcel": "^2.10.2",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.4.21",
    "postcss-modules": "^6.0.0",
    "posthtml": "^0.16.6",
    "posthtml-expressions": "^1.11.1",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2"
  },
  "main": "dist/calculator.js",
  "targets": {
    "module": false,
    "default": {
      "source": [
        "src/calculator.ts",
        "src/state-calculator.ts",
        "src/rewiring-fonts.css",
        "src/index.html",
        "src/rhode-island.html"
      ],
      "outputFormat": "global",
      "context": "browser",
      "distDir": "./dist",
      "sourceMap": false,
      "publicUrl": "./"
    }
  },
  "staticFiles": [
    {
      "staticPath": "static/icons",
      "distDir": "dist/assets/icons",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "staticPath": "static/icons",
      "distDir": "build/assets/icons",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ],
  "lint-staged": {
    "**/*.{js,ts,json,md,css,html}": "prettier --write"
  }
}
