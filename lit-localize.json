{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["es"],
  "tsConfig": "./tsconfig.json",
  "output": {
    "mode": "runtime",
    "localeCodesModule": "src/locales.ts",
    "outputDir": "src/strings"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "translations"
  }
}
